
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>
<html>
<head>
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/script.js"></script>

    <title>Login Page</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="shortcut icon" href="~/assets/images/fav.jpg">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/fontawsom-all.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />
</head>
<body>
    <div class="container-fluid ">
        <div class="container ">
            <div class="row ">
                <div class="col-sm-10 login-box">
                    <div class="row p-3">
                        <div class="col-lg-4 col-md-5 border-right border-secondary">
                            <div class="small-logo mt-4">
                                <img src="~/assets/logo (1).png" style="width:300px;height:250px;" />

                            </div>
                        </div>
                        <div class="col-lg-8 col-md-7 log-det">
                            <div class="p-2 text-dark">
                                <h2>Sign In</h2>
                            </div>
                           
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                            {
                                <div class="text-box-cont">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" name="user" class="form-control rounded" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1">
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
                                        </div>
                                        <input type="password" name="pass" class="form-control rounded" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
                                    </div>

                                    <div class="input-group center mb-3">
                                        <button class="btn btn-primary btn-round" type="submit">SIGN IN</button>
                                    </div>
                                    <p>
                                        Din't Have an Account..?
                                        <a href="Registration">
                                            <u>Sign up here</u>
                                        </a>
                                    </p>
                                </div>
                            }


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>




</html>