@model House_Rental_System.Models.Seller_Details

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<head>

    <link rel="shortcut icon" href="~/assets/images/fav.jpg">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />


</head>


<div class="container-fluid ">
    <div class="container ">
        <div class="row ">

            <div class="col-sm-10 login-box">
                <div class="row">
                    <div class="col-lg-7 col-md-6 log-det">

                        <h2 class="py-2 text-dark">Profile</h2>

                        <div class="text-box-cont">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="far fa-user"></i>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.Seller_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Full Name", @readonly = "readonly" } })

                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="far fa-envelope"></i>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.Seller_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @readonly = "readonly" } })

                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-phone"></i></span>
                                </div>
                                @Html.EditorFor(model => model.Seller_Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "PhoneNo", @readonly = "readonly" } })

                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-city"></i></span>
                                </div>
                                @Html.EditorFor(model => model.Seller_state, new { htmlAttributes = new { @class = "form-control", @placeholder = "State", @readonly = "readonly" } })

                            </div>




                        </div>



                    </div>
                    <div class="col-lg-5 col-md-6 box-de bg-secondary">
                        <div class="ditk-inf sup-oi">
                            @{if (ViewBag.image != null)
                                {
                                    var base64 = Convert.ToBase64String(ViewBag.image);
                                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                    <img src='@imgsrc' style="width: 50%; height: 50%; border-radius:50%; border: 1px solid white;" />
                                }
                                else
                                {
          
                            <img style="width: 50%; height: 50%; border-radius:50%; border: 1px solid white;" src="~/assets/profile.png" />
                     
                                    
                                }
                            }
                            <br /><br />
                            <a href="~/Seller/EditProfile/@Model.Seller_ID" class="fa fa-edit btn btn-sm btn-warning px-3 rounded-pill font-weight-bold text-white">
                                Edit
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>