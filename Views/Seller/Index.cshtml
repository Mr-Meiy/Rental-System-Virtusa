@model IEnumerable<House_Rental_System.Models.Property_Details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}
<head>
    <link href="~/assets/form/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css" rel="stylesheet" />
</head>
<div class="container" style="margin-top:1%;">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-4">
                <div class="card">
                    @{
                        var images = item.Property_Images;
                        if (images.Count > 0)
                        {
                            var base64 = Convert.ToBase64String(images[0].Image);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src='@imgsrc' style="height:200px;width:100%; border-radius:4px;" />
                        }

                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Property_Name</h5>
                        <p class="card-text zmdi zmdi-pin">  <b>Address</b>  @item.Property_Address , @item.Property_City (@item.Property_Pin)</p>
                        <p class="card-text fa fa-bed">  <b>BHK</b>  @item.Property_Information.BHK</p><br />
                        <p class="card-text fa fa-rupee">  <b>Deposit</b>  @item.Property_Information.Expected_Deposit</p><br />
                        <p class="card-text fa fa-rupee">  <b>Rent</b>  @item.Property_Information.ExpectedRent</p><br />
                        
                        <a href="~/Seller/Edit/@item.Property_ID" class="btn fa fa-edit btn-sm bg-info text-white">  Edit</a> 
                        <a href="~/Seller/Requests/@item.Property_ID" class="btn fa fa-mail-bulk btn-sm bg-primary float-right text-white">  Request</a>
                        
                    </div>
                </div>
            </div>


        }
    </div>
</div>